extends ../layouts/layout.pug
block main
  .row.container-fluid
    if(globalError)
      h3= globalError

    .col-md-6.col-md-offset-3
      form.form-horizontal(method="post" action="/users/login")
        fieldset
          legend Login Here
          .form-group
            label.col-lg-2.control-label(for='inputEmail') Email
            .col-lg-10
              input#inputEmail.form-control(type='email', placeholder='Email' name="email")
          .form-group
            label.col-lg-2.control-label(for='inputPassword') Password
            .col-lg-10
              input#inputPassword.form-control(type='password', placeholder='Password' name="password")
         
          .form-group
            .col-lg-10.col-lg-offset-2
              button.btn.btn-primary(type='submit') Submit
